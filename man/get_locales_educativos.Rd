  sf::st_drop_geometry() |>
  count(area_censo)

# Distribución por distrito
locales_cusco |>
  sf::st_drop_geometry() |>
  count(distrito, sort = TRUE) |>
  head(10)

# Filtrar locales con nivel inicial
